<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="users">
  <select id="getUser" resultType="Users" parameterType="int">
  	select * from users where idx = #{idx}
  </select>
  
  <insert id="insert" parameterType="Users">
  	insert into users(name,password,email,gender,age,phone,addr)
	values(#{name},#{password},#{email},#{gender},#{age},#{phone},#{addr})
  </insert>
  
  <!-- 일단은 <나이, 전화번호> 만 수정 !! -->
  <update id="update" parameterType="Users">
  	update users set age=#{age},phone=#{phone} where idx=#{idx} 
  </update>
</mapper>